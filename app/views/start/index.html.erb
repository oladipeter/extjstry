  Ext.onReady(function() {
      new Ext.Toolbar({
          renderTo: Ext.getBody(),
          items: [
              {
                  xtype: 'button',
                  icon: '../images/exticons/user.png',
                  text: 'Globomax dolgozók',
                  handler: function() {
                      Ext.Ajax.request({
                          url: 'employees/show_employees_list_window',
                          success: function(response){
                             var response_text = response.responseText;
                              eval(response_text);
                          },
                          failure: function(resp) {
                              Ext.Msg.alert('Hiba!', 'Probléma történt a válaszadáskor!!');
                          }
                      });
                  }
              },
              {
                  xtype: 'tbseparator'
              },
              {
                  xtype: 'button',
                  icon: '../images/exticons/systems.png',
                  text: 'Rendszerek',
                  handler: function() {
                      Ext.Ajax.request({
                          url: 'employees/show_employees_list_window',
                          params: {
                              action : "no_more_window"
                          },
                          success: function(response) {
                              var response_text = response.responseText;
                              eval(response_text);
                          },
                          failure: function(resp) {
                              Ext.Msg.alert('Hiba!', 'Probléma történt a válaszadáskor!!');
                          }
                      });
                  }
              },
              {
                  xtype: 'tbseparator'
              },
              {
                  xtype: 'button',
                  text: 'Névjegy',
                  handler: function() {
                      Ext.Ajax.request({
                          url: 'abouts/show',
                          success: function(response){
                             var response_text = response.responseText;
                              eval(response_text);
                          },
                          failure: function(resp) {
                              Ext.Msg.alert('Hiba!', 'Probléma történt a válaszadáskor!!');
                          }
                      });
                  }
              }

          ]
      });
  });


</script>